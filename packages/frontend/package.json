{
  "name": "@inkathon/frontend",
  "version": "0.0.1",
  "homepage": "https://inkathon.xyz",
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  },
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "node": "pnpm run --filter contracts node",
    "dev-and-node": "concurrently \"pnpm dev\" \"pnpm node\" --names \"Next,Node\" --kill-others",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "type-check": "tsc --pretty --noEmit",
    "lint": "prettier . --check && pnpm eslint",
    "lint:fix": "prettier . --write && pnpm eslint --fix",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.5.2",
    "@emotion/css": "^11.10.6",
    "@emotion/react": "^11.10.6",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.6",
    "@inkathon/contracts": "workspace:*",
    "@polkadot/api": "^10.1.4",
    "@polkadot/api-contract": "^10.1.4",
    "@polkadot/extension-dapp": "^0.45.3",
    "@polkadot/extension-inject": "^0.45.3",
    "@polkadot/types": "^10.1.4",
    "@polkadot/util": "^11.1.1",
    "@polkadot/util-crypto": "^11.1.1",
    "@scio-labs/use-inkathon": "0.0.1-alpha.30",
    "next": "^13.2.4",
    "next-seo": "^5.15.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.7",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.8.0",
    "sharp": "^0.31.3",
    "spinners-react": "^1.0.7",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@emotion/babel-plugin": "^11.10.6",
    "@testing-library/react": "^14.0.0",
    "@types/downloadjs": "^1.4.3",
    "@types/node": "^18.15.5",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-loader": "^9.1.2",
    "babel-plugin-macros": "^3.1.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "prettier": "^2.8.6",
    "prettier-plugin-twin.macro": "^1.0.11",
    "tailwindcss": "^3.2.7",
    "twin.macro": "^3.1.0",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3"
  }
}

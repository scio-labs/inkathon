{
  "name": "inkathon",
  "description": "Full-Stack DApp Boilerplate for ink! Smart Contracts",
  "homepage": "https://inkathon.xyz",
  "author": "Scio Labs <hello@scio.xyz> (https://scio.xyz)",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "contracts",
    "create-inkathon-app",
    "docs"
  ],
  "engines": {
    "node": ">=20 <=24"
  },
  "engineStrict": true,
  "packageManager": "bun@1.2.22",
  "scripts": {
    "dev": "bun run -F frontend dev",
    "node": "bun run -F contracts node",
    "dev-and-node": "concurrently \"bun run dev\" \"bun run node\" --names \"next,node\" --kill-others",
    "codegen": "bun run -F contracts codegen",
    "build": "bun run codegen && bun run -F frontend build",
    "build:standalone": "bun run codegen && bun run -F frontend build:standalone",
    "start": "bun run -F frontend start",
    "test": "bun run -F contracts test",
    "typecheck": "bun run -F '*' typecheck",
    "clean": "bun run -F '*' clean",
    "clean-install": "find . -type d -name 'node_modules' -prune -exec rm -rf '{}' + && find . -name 'bun.lock' -delete && bun install",
    "lint": "bun run -F '*' lint",
    "lint:fix": "bun run -F '*' lint:fix",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "update": "bunx taze minor --interactive --recursive --write --install --includeLocked --exclude '@types/node'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "concurrently": "^9.2.1",
    "nano-staged": "^0.8.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.7.0",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "contracts",
    "esbuild",
    "sharp",
    "simple-git-hooks"
  ]
}
